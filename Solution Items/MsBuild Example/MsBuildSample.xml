        <CompressorTask
            CssFiles="StylesheetSample1.css, StylesheetSample2.css, StylesheetSample3.css"
            CssOutputFile="SylesSheetFinal.css"
            CssCompressionType="YuiStockCompression"
            JavaScriptFiles="Common\Common2.js"
